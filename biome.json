{
    "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
    "formatter": {
        "enabled": true,
        "indentWidth": 4,
        "indentStyle": "space",
        "lineWidth": 120,
        "ignore": ["webextension-polyfill", "browser-polyfill.*", ".vscode"]
    },
    "linter": {
        "enabled": true,
        "ignore": ["webextension-polyfill", "browser-polyfill.*"],
        "rules": {
            "recommended": true,
            "suspicious": {
                "noAssignInExpressions": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "arrowParentheses": "asNeeded"
        }
    },
    "json": {
        "parser": {
            "allowComments": true,
            "allowTrailingCommas": true
        }
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    }
}
